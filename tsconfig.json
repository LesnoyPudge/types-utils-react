{
    "include": [
        "**/*.ts", "test.tsx",
    ],
    "exclude": [
        "node_modules",
        "build"
    ],
    "compilerOptions": {
        "types": [],
        "lib": ["ESNext", "DOM"],
        "module": "NodeNext",
        "target": "ESNext",
        "moduleDetection": "force",
        "outDir": "build",
        "skipLibCheck": true,
        "strict": true,
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        // "composite": true,
        "allowJs": true,
        "declaration": true,
        "declarationMap": false,
        "baseUrl": ".",
        "declarationDir": "build",
        "jsx": "react-jsx"
    }
}
